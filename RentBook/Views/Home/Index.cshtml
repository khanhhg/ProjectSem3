<!-- Page Content -->
@*banner*@
<div class="row carousel-holder">
    <div class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">

                    <img src="~/Images/banner1.jpg" style="width:750px;height:200px"/>
                </div>
                <div class="item">

                    <img src="~/Images/banner2.jpg" style="width:750px;height:200px"/>
                </div>
                <div class="item">

                    <img src="~/Images/banner3.jpg" style="width:750px;height:200px"/>
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>

@*Product*@
@{ 
    foreach (var item in Model)
    {


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Url.Content("~/Images/Book/"+item.BookImage)" >
        <div class="caption">
            <h4 class="pull-right">@item.Price</h4>
            <h4>
                @*<a href="#">Second Product</a>*@
                <p> <a href="@Url.Action("BookDetail",new { @BookID =item.BookID })">@item.BookName</a></p>
                
                
                <p>Author :@item.Author.AuthorName</p>
                <p>@item.Description</p>
            </h4>
            

        </div>

        <div class="ratings">
            @using (Html.BeginForm("ThemGioHang", "GioHang", new { @BookID = item.BookID, @strURL = Request.Url.ToString() }))
            {

                <input type="submit" style="cursor:pointer" value="Borrow &#xf07a;" id="btnGioHang" class="btn btn-primary">
            }
            @*<a class="btn btn-danger" href="#" title="add to cart"> Add to cart </a>*@

            @*<p class="pull-right">12 reviews</p>
